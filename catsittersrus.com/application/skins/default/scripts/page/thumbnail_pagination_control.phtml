<?php
if ($this->pageCount):
?>
<div class="gallery-thumbs-pagination-control">
     <!-- Previous page link -->
    <?php
    if (isset($this->previous)):
    ?>
     <a href="<?php echo "/$this->pageName?albumName=$this->albumName&amp;action=$this->action&amp;page=$this->previous&amp;subAlbumPage=$this->subAlbumPage#media-gallery"; ?>"><span class="previous">&laquo;&nbsp;Prev</span></a>
